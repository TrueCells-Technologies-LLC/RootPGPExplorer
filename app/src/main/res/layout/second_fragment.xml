<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_alignParentStart="true"
       android:padding="20dp"
       android:layout_margin="30dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:id="@+id/layoutFoo1"
          android:layout_alignParentTop="true"
          android:layout_alignParentStart="true"
          android:padding="10dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Setting up database password"
             android:id="@+id/textViewFoo1"
             android:layout_centerHorizontal="true" />

         <ProgressBar
             android:layout_width="wrap_content"
             android:id="@+id/db_progressbar"
             android:layout_height="wrap_content"
             style="?android:attr/progressBarStyleSmall"
             android:layout_toStartOf="@id/textViewFoo1"
             android:layout_marginRight="20dp"
           />
         </RelativeLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:layout_below="@id/layoutFoo1"
             android:id="@+id/layoutFoo2"
             android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generating encryption keys......"
                android:id="@+id/textViewFoo2"
                android:layout_centerHorizontal="true" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/key_progressbar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_toStartOf="@id/textViewFoo2"
                android:layout_marginRight="20dp"
                />
         </RelativeLayout>

            <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

           android:layout_below="@id/layoutFoo2"
                android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting up database password"
                android:id="@+id/textViewFoo3"
                android:layout_centerHorizontal="true" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enc_progressbar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_toStartOf="@id/textViewFoo3"
                android:layout_marginRight="20dp"
                />

      </RelativeLayout>
   </RelativeLayout>

</RelativeLayout>