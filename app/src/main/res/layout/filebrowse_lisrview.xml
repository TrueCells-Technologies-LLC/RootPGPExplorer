<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">


    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/list_imageview"
        android:tint="@color/folderColor"
        android:layout_width="48dp"
        android:layout_height="60dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">
        <TextView
            android:text="TextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:id="@+id/list_textview"
            android:lines="1"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@color/textColorTertiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_encrypt"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/list_textview"
            android:id="@+id/encryption_status_image" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/list_textview"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@id/list_textview"
            android:layout_height="wrap_content">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/folder_size_textview"
                android:textSize="10sp"
                android:layout_toEndOf="@+id/nofiles_textview"
                android:layout_marginStart="12dp"
                android:textColor="@color/textColorTertiary" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nofiles_textview"
                android:textSize="10sp"
                android:textColor="@color/textColorTertiary" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>