<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorTertiary">@color/dividerColor</item>



    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="PreActivityThemeFragmentOne" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@color/pagercolor1</item>
    </style>

    <style name="PreActivityThemeFragmentTwo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@color/pagercolor2</item>
    </style>

    <style name="PreActivityThemeFragmentThree" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@color/pagercolor1</item>
    </style>

    <style name="PreActivityThemeFragmentFour" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@color/pagercolor1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="TabsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorTertiary">@color/dividerColor</item>
         <item name="android:actionBarDivider">@color/colorPrimaryDark</item>
         <item name="actionBarDivider">@color/colorPrimaryDark</item>
        <item name="actionModeBackground">@color/colorPrimaryDark</item>
        <item name="android:actionModeBackground">@color/colorPrimaryDark</item>
    </style>
    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
         <item name="android:actionBarDivider">@color/colorPrimaryDark</item>
         <item name="actionBarDivider">@color/colorPrimaryDark</item>
        <item name="actionModeBackground">@color/colorPrimaryDark</item>
        <item name="android:actionModeBackground">@color/colorPrimaryDark</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>

    </style>

    <!--key select activity theme different due to edit text-->
    <style name="KeySelectStyle" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColorPrimary">@color/textColorPrimary</item>
    <item name="android:textColorTertiary">@color/dividerColor</item>

    </style>
    <style name="menu_labels_style">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
