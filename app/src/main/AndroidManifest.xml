<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.osama.cryptofm">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.osama.cryptofm.CryptoFM"
        android:allowBackup="true"
        android:allowClearUserData="false"
        android:icon="@mipmap/iconfinal"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.osama.cryptofm.startup.InitActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.osama.cryptofm.startup.UnlockDbActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.osama.cryptofm.filemanager.ui.FileBrowserActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <!-- first and splash activity -->
        <activity
            android:name="com.osama.cryptofm.startup.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Pre start activity -->
        <activity
            android:name="com.osama.cryptofm.filemanager.ui.FilemanagerTabs"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/TabsTheme" />
        <activity
            android:name="com.osama.cryptofm.startup.PreStartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PreActivityThemeFragmentTwo" />
        <activity android:name="com.osama.cryptofm.startup.OptionActivity" />

        <!-- Key select activity  have different theme -->
        <activity
            android:name="com.osama.cryptofm.startup.KeySelectActivity"
            android:theme="@style/KeySelectStyle" />
        <!-- End of activities -->


        <!-- started service section -->
        <service
            android:name="com.osama.cryptofm.services.CleanupService"
            android:stopWithTask="false" />

        <!-- file read provider -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity android:name="com.osama.cryptofm.about.AboutActivity" />
        <activity
            android:name="com.osama.cryptofm.about.LicencesActivity"
            android:parentActivityName="com.osama.cryptofm.about.AboutActivity" />
        <activity
            android:name="com.osama.cryptofm.about.ShowLicenseActivity"
            android:parentActivityName="com.osama.cryptofm.about.LicencesActivity"
            />
    </application>

</manifest>